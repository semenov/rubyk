!!!
%html
  %head
    %title Рубик &mdash; социальный микроблог о Ruby
    = #stylesheet_link_tag 'scaffold'
    = stylesheet_link_tag 'main'
    %meta{ :name => "verify-v1", :content => "D3fhrtcjF+WBLd1QzniZK0YJWTpz+Nuox9GQDNizklQ=" }
    = auto_discovery_link_tag :rss, feed_url
  %body
    #header
      #logo
        - link_to root_path, :title => "Социальный микроблог о Ruby" do
          = image_tag "rubyk.gif", :alt => "Рубик"
      
      /    
        #new-post-link
          = link_to 'новая заметка', new_post_path       
        
      - menu = [ ["заметки", root_path], ["написать", new_post_path], ["что это?", about_path] ]
      %ul#menu
        - for item in menu 
          %li
            - if current_page? item.last
              .current= item.first
            - else
              = link_to item.first, item.last

      #auth    
        - if logged_in?
          %strong
            = current_user.email
          |
          = link_to 'Выйти', logout_path
        - else
          = link_to 'Войти через Google Account', login_path




    
    #notice  
      = flash[:notice]
    

    
    #content
      = yield
      
    #footer
      &copy; Владислав Семенов 
      | 
      = link_to 'vladislav.semenov@gmail.com', 'mailto:vladislav.semenov@gmail.com'
